if (outcome == success) of /profile=full/subsystem=datasources/data-source=EeeDS:read-resource
  /profile=full/subsystem=datasources/data-source=EeeDS:remove
end-if

/profile=full/subsystem=datasources/data-source=EeeDS \
  :add( jndi-name=java:/EeeDS, \
        connection-url="{{ eee_db_url }}",\
        user-name={{ eee_db_user }}, \
        password={{ eee_db_password }}, \
        check-valid-connection-sql="select 1 from dual", \
        background-validation-millis=180000, \
        min-pool-size=2, \
        max-pool-size=52, \
        driver-name=OracleJDBCDriver, \
        driver-class=oracle.jdbc.OracleDriver, \
        use-ccm=false, \
        jta=true)

/profile=full/subsystem=datasources/data-source=EeeDS:enable
